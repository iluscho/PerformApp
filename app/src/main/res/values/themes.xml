<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PerformApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Основной фиолетовый цвет -->
        <item name="colorPrimary">@color/purple_500</item>
        <!-- Более темный фиолетовый цвет для акцентов -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Белый цвет для текста на фиолетовом фоне -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Цвет фона для светлой темы -->
        <item name="android:windowBackground">@color/purple_50</item>

        <!-- Цвет текста для элементов, расположенных на фоне primary -->
        <item name="android:textColorPrimary">@color/black</item>

        <!-- Цвет кнопок и других интерактивных элементов -->
        <item name="colorAccent">@color/purple_200</item>

        <!-- Стиль для кнопок -->
        <item name="android:buttonStyle">@style/Widget.MaterialComponents.Button</item>

        <!-- Обязательные атрибуты для корректной работы TextInputLayout -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>
</resources>
