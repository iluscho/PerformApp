<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Заголовок "Все задачи" -->
    <TextView
        android:text="Все задачи"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:padding="8dp"/>

    <!-- Горизонтальный LinearLayout для кнопок -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:weightSum="2"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Фильтры"
            app:cornerRadius="8dp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button"
            android:ellipsize="end"
            android:maxLines="1"
            android:minWidth="0dp"
            android:minEms="5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearFilters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Сброс фильтров"
            app:cornerRadius="8dp"
            android:layout_marginStart="8dp"
            style="@style/Widget.MaterialComponents.Button"
            android:ellipsize="end"
            android:maxLines="1"
            android:minWidth="0dp"
            android:minEms="5"
            android:fitsSystemWindows="true"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewNoTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Задачи не найдены"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"
        android:padding="16dp"
        android:textColor="@android:color/black"/>

    <!-- RecyclerView для отображения списка задач -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAllTasks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
