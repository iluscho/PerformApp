<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <EditText
        android:id="@+id/etObjectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название объекта" />

    <EditText
        android:id="@+id/etObjectAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Адрес объекта" />

    <EditText
        android:id="@+id/etObjectDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Описание объекта (необязательно)" />

    <Button
        android:id="@+id/btnAddObject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить объект" />
</LinearLayout>
