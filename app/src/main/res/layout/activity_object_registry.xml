<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etObjectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название объекта" />

    <EditText
        android:id="@+id/etObjectAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Адрес объекта" />

    <EditText
        android:id="@+id/etObjectDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Описание объекта (необязательно)" />

    <Button
        android:id="@+id/btnAddObject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить объект" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Назад" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Список объектов:"
        android:textSize="18sp"
        android:paddingTop="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewObjects"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"/>
</LinearLayout>
